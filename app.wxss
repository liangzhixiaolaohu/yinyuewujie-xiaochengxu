/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 公用样式 */
page{ height:100%;}
.bg{ background:#f5f5f5; overflow: hidden; min-height: 100%;}
.wrap{ width:710rpx; margin:0 auto; position:relative;}
image{ width:100%; border-radius:5px;}
.marAuto{ margin:0 auto;}
.marT2{ margin-top:20rpx;}.marR2{ margin-right:20rpx;}.marB2{ margin-bottom:20rpx;}.marL2{ margin-left:20rpx;}
.padT2{ padding-top:20rpx;}.padR2{ padding-right:20rpx;}.padB2{ padding-bottom:20rpx;}.padL2{ padding-left:20rpx;}
.marT3{ margin-top:30rpx;}.marR3{ margin-right:30rpx;}.marB3{ margin-bottom:30rpx;}.marL3{ margin-left:30rpx;}
.padT3{ padding-top:30rpx;}.padR3{ padding-right:30rpx;}.padB3{ padding-bottom:30rpx;}.padL3{ padding-left:30rpx;}
.marT4{ margin-top:40rpx;}.marR4{ margin-right:40rpx;}.marB4{ margin-bottom:40rpx;}.marL4{ margin-left:40rpx;}
.padT4{ padding-top:40rpx;}.padR4{ padding-right:40rpx;}.padB4{ padding-bottom:40rpx;}.padL4{ padding-left:40rpx;}
.marT6{ margin-top:60rpx;}.marR6{ margin-right:60rpx;}.marB6{ margin-bottom:60rpx;}.marL6{ margin-left:60rpx;}
.padT6{ padding-top:60rpx;}.padR6{ padding-right:60rpx;}.padB6{ padding-bottom:60rpx;}.padL6{ padding-left:60rpx;}
.w-block{ margin-top:20rpx; background:#ffffff; padding:40rpx 0;}
.button1{ color:#F3BB8D; text-align: center; line-height: 88rpx; height: 88rpx; font-size:28rpx; background: #333333;}
.button2{ width:610rpx; height: 88rpx; border-radius:44rpx; line-height: 88rpx; background:#333333; font-size:28rpx; color:#F3BB8D; font-weight: 700; text-align:center; display:block;}
.button3{ width:100%; height: 80rpx; line-height: 80rpx; background:#333333; font-size:28rpx; color:#F3BB8D; text-align:center; font-weight: 700; display:block;}
.button4{ width:610rpx; height: 88rpx; line-height: 88rpx; border:2px solid #F3BB8D; border-radius: 44rpx; font-size:28rpx; color:#EDB48E; text-align:center; display:block; font-weight:bold;}
.button5{ width:120rpx; height:50rpx; display:inline-block; line-height: 46rpx; text-align:center; font-size:24rpx; background:#333333; border-radius:5px; box-sizing:border-box; border:2px solid #555555; color:#F3BB8D;}
.button6{ width:120rpx; height:50rpx; display:inline-block; line-height: 46rpx; text-align:center; font-size:24rpx; border-radius:5px; box-sizing:border-box; border:2px solid #f2bb90; color:#F3BB8D;}
.button7{ width:120rpx; height:50rpx; display:inline-block; line-height: 46rpx; text-align:center; font-size:24rpx; background:#d8d8d8; border-radius:5px; box-sizing:border-box; border:2px solid #d8d8d8; color:#ffffff;}
.module-title{ display:flex; flex-direction:column;}
.module-title .title{ font-size:36rpx; color:#555555; font-weight:700;}
.module-title .subtitle{ font-size:20rpx; color:#B4B4B4; margin-top:6rpx;}
.strong{ font-weight:700;}
.block-white{ background:#ffffff; margin-bottom:20rpx; position:relative;}
.block-white::before{content: "."; display: block; clear: both; visibility: hidden; line-height: 0; height: 0;}
.block-white::after{content: "."; display: block; clear: both; visibility: hidden; line-height: 0; height: 0;}
.radius10{ border-radius:10rpx;}
.p-tab{ width:304rpx; margin:36rpx auto; font-size:26rpx; color:#555555; display:flex; border:2px solid #555555; border-radius: 5px;}
.p-tab .tab-item{ flex:1; text-align:center; height: 58rpx; line-height: 58rpx; box-sizing: border-box;}
.p-tab .tab-item:nth-of-type(1){ border-right:2px solid #555555;}
.p-tab .tab-item:nth-of-type(2){ border-right:none;}
.p-tab .on{ background:#555555; color:#F3BB8D;}
.color-block{ height: 212rpx; background:#333333; position:absolute; left:-20rpx; top:0; right:-20rpx;}
.color999{ color:#999999;}
.font-size-0{ font-size:0;}
.text{ font-size:28rpx; color:#555555; line-height: 40rpx; display:inline-block;}
.text24{ font-size:24rpx; color:#555555; line-height: 40rpx; display:block;}
.block{ display:block;}
.tint{ color:#B4B4B4; font-weight:normal;}

/* 左右滑动 */
.scroll{ margin-bottom:50rpx;}
.scroll .title{display:flex; justify-content:space-between; color:#555555; margin-bottom:20rpx;}
.scroll .title em{ font-size:24rpx;}
.scroll .title span{ font-size:36rpx; font-weight: 700;}
.scroll-con{ width:730rpx; overflow: hidden;}
.scroll-list{overflow: hidden; overflow-x: scroll; -webkit-overflow-scrolling: touch; white-space: nowrap; font-size:0;}
.scroll-list::-webkit-scrollbar { display: none;}
.scroll-list .scroll-item{ color:#555555; display:inline-block; margin-right:20rpx;}

/* 我是有底线的 */
.base-line{ height: 100rpx; position:relative;}
.base-line .line{ width:440rpx; height: 2px; background:#D9D9D9; position:absolute; left:50%; top:50%; margin:-1px 0 0 -220rpx;}
.base-text{ width:200rpx; height: 28rpx; line-height: 28rpx; font-size:20rpx; color:#B4B4B4; position:absolute; left:50%; top:50%; margin:-14rpx 0 0 -100rpx; background:#F5F5F5; text-align:center;}
