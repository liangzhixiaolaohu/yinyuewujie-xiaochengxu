/* pages/course/course.wxss */
.vh100{ min-height:100vh;}
.area{ background:#ffffff; padding:20rpx;}
.package{ display:flex; justify-content:space-between;}
.p-pic{ width:200rpx; height:200rpx; box-sizing:border-box; border:2px solid #DDDDDD; border-radius:5px; margin-right:20rpx; overflow: hidden; position:relative;}
.p-intr{ flex:1; font-size:0; padding:20rpx 0 12rpx; display:flex; flex-direction:column; justify-content:space-between;}
.p-pic image{ border-radius:5px; width:193rpx; height: 193rpx;}
.p-pic .tips{ width:100%; height: 36rpx; line-height: 36rpx; text-align:center; background:rgba(0,0,0,0.5); border-radius:0px 0px 5px 5px; font-size:20rpx; color:#ffffff; position:absolute; left:0; bottom:0;}
.p-top{ display:flex; justify-content:space-between;}
.p-bottom{ display:flex; justify-content:space-between; align-items:center;}
.pt-left{ font-size:0;}
.p-origin{ font-size:22rpx; color:#999999;}
.p-bottom .button0{ width:120rpx; height:50rpx; display:inline-block; line-height: 46rpx; text-align:center; font-size:24rpx; background:#333333; border-radius:5px; box-sizing:border-box; border:2px solid #333333; color:#F3BB8D;}
.p-bottom .button1{ width:120rpx; height:50rpx; display:inline-block; line-height: 46rpx; text-align:center; font-size:24rpx; border-radius:5px; box-sizing:border-box; border:2px solid #f2bb90; color:#F3BB8D; background: none;}
.p-bottom .button2{ width:120rpx; height:50rpx; display:inline-block; line-height: 46rpx; text-align:center; font-size:24rpx; background:#d8d8d8; border-radius:5px; box-sizing:border-box; border:2px solid #d8d8d8; color:#ffffff;}
.border-top{border-top:2rpx solid #F5F5F5;}