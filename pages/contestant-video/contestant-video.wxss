/* pages/contestant-video/contestant-video.wxss */
.jc-center{ display:flex; justify-content:center;}
.block{ display:block;}

.top-bg{ border-radius: 0; position:absolute; left:0; top:0;}
.box{ position:relative;}
.video{ position:relative;}
.video-show{ width:692rpx; height:464rpx; border-radius: 10rpx;}
.video .revise{ position:absolute; left:0; bottom:0; width:100%; height: 80rpx; line-height: 80rpx; font-size:28rpx; color:#F3BB8D; text-align:center; background:#333333; border-radius:0 0 5px 5px;}
.play-btn{ position:absolute; left:50%; top:50%; width:88rpx; height:88rpx; margin:-44rpx 0 0 -44rpx;}
.border-box{ box-sizing:border-box;}
.block-white:nth-last-of-type(1){ margin-bottom:0;}
.height100{ min-height:calc(100vh - 20rpx); background: #ffffff;}
.video-title{ padding:30rpx 0 15rpx 20rpx;}
.video-intr{ padding:10rpx 0 20rpx;}
.video-intr .text24{ margin-top:12rpx; display: block; overflow: hidden; width:692rpx; text-overflow: ellipsis; white-space:nowrap; }

.scroll{ margin-bottom:50rpx;}
.scroll .title{display:flex; justify-content:space-between; color:#555555; margin-bottom:20rpx;}
.scroll .title em{ font-size:24rpx;}
.scroll .title span{ font-size:36rpx; font-weight: 700;}
.scroll-con{ width:730rpx; overflow: hidden;}
.scroll-list{overflow: hidden; overflow-x: scroll; -webkit-overflow-scrolling: touch; white-space: nowrap;}
.scroll-list::-webkit-scrollbar { display: none;}

.result{ background:#ffffff; border-radius:10px 10px 0 0; margin-top:120rpx; display:flex; flex-direction:column; align-items:center; border-bottom:2px solid #F5F5F5;}
.head-portrait{ width:180rpx; height: 180rpx; margin-top:-90rpx; border-radius: 50%;}
.result .name{ font-size:28rpx; color: #333333; font-weight:700; display:block; text-align: center; margin-top:15rpx;}
.votes{ display:flex; justify-content:center; align-items:center; margin:10rpx 0 20rpx;}
.votes-icon{ width:64rpx; height: 84rpx; margin-right:25rpx;}
.votes .unit{ width:36rpx; height: 36rpx;}
.votes .num{ font-size: 44rpx; color:#FF6D43; margin:0 10rpx 0 0; font-weight:bold;}
.tint{ color:#B4B4B4;}
.video-box{ padding-left:20rpx; font-size:0px;}
.video-item{ display:inline-block; margin-right:20rpx;}

.mask{ position:fixed; left:0; top:0; right:0; bottom:0; background: rgba(0,0,0,0.4); z-index: 10;}
.pop{ width:570rpx; overflow: hidden; position:absolute; left:50%; top:50%; transform: translate(-50%, -50%);}
.pop-content{ background:#ffffff; font-size:0; overflow: hidden; padding:0 30rpx 40rpx; border-radius:0 0 5px 5px;}
.pop .title{ width:100%; font-size:36rpx; height:160rpx; background:#303030; display:flex; justify-content:center; align-items:center; color:#F4BC8E; border-radius:5px 5px 0 0;}
.title .name{ margin-left:20rpx;}
.strip{ font-size:28rpx; color:#999999; padding-top:5rpx;}
.text20{ font-size:20rpx; color:#B4B4B4;}
.pop .close{ display:flex; justify-content:center; margin-top:60rpx;}

.pop-content-vote{ height:780rpx; background:url(https://image-smteat.oss-cn-beijing.aliyuncs.com/static/xiaochengxu/images/vote-suc.png) no-repeat; background-size: contain; display:flex; flex-direction:column; align-items:center;}
.pop-content-vote .headpic{ margin-top:172rpx; border-radius: 50%;}
.pop-content-vote .name{ font-size:36rpx; color:#F3BA8D; font-weight:700; height: 50rpx; line-height: 50rpx; display: block; margin:20rpx 0 10rpx;}
.pop-content-vote .rank{ font-size:28rpx; color:#F3BA8D;}
.pop-content-vote .ballot{ height: 60rpx; display:flex; justify-content: center; margin-top:30rpx;}
.pop-content-vote .ballot span{ display: block; width:55rpx; height:60rpx; text-align: center; line-height: 60rpx; font-size: 28rpx; color: #000000; background: #ffffff; border-radius: 5rpx; margin:0 2rpx;}
.toHelp{ width:300rpx; height: 88rpx; line-height: 88rpx; font-size:28rpx; color:#ffffff; text-align: center;  background: linear-gradient(to right, #edc297 , #ce9362); margin-top:80rpx; border-radius: 44rpx/50%;}