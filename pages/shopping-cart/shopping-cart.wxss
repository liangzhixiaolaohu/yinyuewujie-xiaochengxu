/* pages/shopping-cart/shopping-cart.wxss */
.vh100{ min-height:100vh;}
.area{ background:#ffffff; padding:20rpx;}
.package{ display:flex; justify-content:space-between;}
.p-pic{ width:200rpx; height:200rpx; box-sizing:border-box; border:2rpx solid #DDDDDD; border-radius:5px; margin-right:20rpx; position:relative;}
.p-intr{ flex:1; font-size:0; padding:20rpx 0 12rpx; display:flex; flex-direction:column; justify-content:space-between;}
.p-pic img{ border-radius:5px; width:193rpx; height: 193rpx;}
.p-pic .tips{ width:100%; height: 36rpx; line-height: 36rpx; text-align:center; background:rgba(0,0,0,0.5); border-radius:0px 0px 5px 5px; font-size:20rpx; color:#ffffff; position:absolute; left:0; bottom:0;}
.p-top{ display:flex; justify-content:space-between;}
.p-bottom{ display:flex; justify-content:space-between; align-items:center;}
.pt-left{ font-size:0;}
.p-origin{ font-size:22rpx; color:#999999;}

.pay-list{ border-bottom:2rpx solid #F5F5F5;}
.pay-list .area{ padding-bottom:0; padding-right:0;}
.pay-list .package{ padding:0 20rpx 20rpx 0; border-bottom:2rpx solid #F5F5F5;}
.pay-list .area:nth-last-of-type(1) .package{ border-bottom:0;}
.total{ font-size:0; display:flex; justify-content:flex-end;}
.payment-method{ background: #ffffff; font-size:0;}
.method{ height:120rpx; padding-right:20rpx; border-bottom:2rpx solid #F5F5F5; margin-left:20rpx; display:flex; justify-content:space-between; align-items:center;}
.method .name{ display:flex; align-items:center;}
.choice{ display:inline-block; width:28rpx; height:28rpx; background:url(https://image-smteat.oss-cn-beijing.aliyuncs.com/static/xiaochengxu/images/circle.png) no-repeat; background-size:contain;}
.choice.on{ background:url(https://image-smteat.oss-cn-beijing.aliyuncs.com/static/xiaochengxu/images/selected2.png) no-repeat; background-size:contain;}
.payment-method .tips{ font-size:20rpx; color:#999999; height:68rpx; display:flex; justify-content:center; align-items:center;}
.fixed{ position:fixed; left:0; bottom:0;}

.shopping-list{}
.shopping-list .area{ border-bottom:2rpx solid #F5F5F5;}
.choice-zone{ width:48rpx; display:flex; align-items:center;}
.count{ display:flex; font-size:20rpx; width:162rpx; height:38rpx; border:1rpx solid #dddddd; border-radius:3rpx;}
.count .symbol{ flex:1; display:flex; justify-content:center; align-items:center;}
.count .num{ display:block; width:50rpx; text-align:center; line-height:38rpx; background: #f5f5f5; color:#555555; border-left:1rpx solid #dddddd; border-right:1rpx solid #dddddd;}
.settlement{ height:88rpx; border-top:2rpx solid #E0E0E0; display:flex; justify-content:space-between; background:#ffffff; padding-left:20rpx; width:100%;}
.check-all{ display:flex; align-items:center;}
.check-all .choice{ margin-right:20rpx;}
.sc-button{ display:block; width:204rpx; height: 88rpx; background:#333333; color:#F3BB8D; text-align:center; line-height:88rpx; font-size:28rpx; margin-left:20rpx; font-weight:700;}
.settle{ display:flex; align-items:center;}