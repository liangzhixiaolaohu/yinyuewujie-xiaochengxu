<!--pages/song-edit/song-edit.wxml-->
<view class="bg">
  <view class="height100">
    <view class="block-white marT2 padT4 border-box">
      <view class="module-title add-title">
        <span class="title">曲目一</span>
      </view>
      <form bindsubmit='formSubmit'>
      <view class="song-info">
        <view class="one-item">
          <view class="item-name"><span class="mark">*</span><span class="name"> 曲目名</span></view>
          <view class="item-info"><input class="info" placeholder="请填写" value='{{song}}' name="song" bindinput="inputSong"/></view>
        </view>
        <view class="one-item">
          <view class="item-name"><span class="mark">*</span><span class="name">作曲家</span></view>
          <view class="item-info"><input class="info" placeholder="请填写" value='{{composer}}' name="composer" bindinput='inputComposer'/></view>
        </view>
      </view>
      <view class="jc-center marT6">
        <button class="button2" form-type="submit">保存</button>
      </view>
      </form>
    </view>
  </view>
</view>
